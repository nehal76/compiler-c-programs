#include <stdio.h>
int main(void)
{
    char a[50];
    printf("enter a string: ");
    int t;
    scanf("%d",&t);
    printf("%d\n",t);
    while(t!=0)
    {
        //printf("Enter a string");
        scanf("%s",&a);
        printf("%s--->",a);
        if(a[0]=='/'&&(a[1]=='/' || a[1]=='*'))
        {
            printf("It is a comment");
        }
        else
        {
            printf("It is not a comment");
        }
        
    }
}
